{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="main container">
        <div class="row well">
            <div class="col-ms-6">
                <div class="page-header">
                    <h2>{% trans %}New User{% endtrans %}</h2>
                </div>
                {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate', 'role' : 'form' } }) }}
                
                <div class="form-group">
                    {{ form_label(form.username, 'Usuario') }}
                    {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control', 'placeholder' : 'Ingrese Usuario' } }) }}
                    <span class="text-danger">
                        {{ form_errors(form.username) }}
                    </span>
                </div>
                <div class="form-group">
			        {{ form_label(form.firstName, 'Nombres') }}
			        {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder' : 'Ingrese sus Nombres'}}) }}
			        <span class="text-danger">{{ form_errors(form.firstName) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.lastName, 'Apellidos') }}
			        {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder' : 'Ingrese sus Apellidos'}}) }}
			        <span class="text-danger">{{ form_errors(form.lastName) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.email, 'Correo Electr칩nico') }}
			        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'Ingrese el Correo Electr칩nico'}}) }}
			        <span class="text-danger">{{ form_errors(form.email) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.password, 'Contrase침a:') }}
			        {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder' : 'Ingrese la Contrase침a'}}) }}
			        <span class="text-danger">{{ form_errors(form.password) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.role, 'Rol') }}
			        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.role) }}</span>
			    </div>

				<div class="checkbox">
				    <label>
						{{ form_widget(form.isActive) }}{% trans %}Active{% endtrans %}
						<span class="text-danger">{{ form_errors(form.isActive) }}</span>
				    </label>
				</div>
			</fieldset>

		    <p>
		        {{ form_widget(form.save, {'label' : 'Create user', 'attr': {'class': 'btn btn-success'}}) }}
		    </p>       
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
{% endblock %}